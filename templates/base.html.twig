<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Tryhard{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto">
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
</head>
<body{% if bodyClass is defined %} class="{{ bodyClass }}"{% endif %}>
{% block main %}
    <header>
        {% block header %}
            {% block navbar %}
                <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
                    <a class="navbar-brand" href="#">Vinci investment</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
                            aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarText">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('homepage') }}">Accueil<span
                                            class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('service') }}">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('team') }}">Ã‰quipe</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="{{ path('blog') }}">Blog</a>
                            </li>
                        </ul>
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    </div>
                </nav>
            {% endblock %}
        {% endblock %}
    </header>
    <div id="topcontent">
        {% block topcontent %}
            <div id="backgroundpicture" class="header-parallax">
                <div class="containerofmaintext">
                    <div class="main_text">
                        <h1>{% block maintext %}{% endblock %}</h1>
                    </div>
                </div>
                <div class="row" style="
                position: absolute;
                background-color: palevioletred;
                bottom: 0;
                width: 100%;
                left: 15px;
                height: 60px;
            ">
                    <div class="col"><img class="img-partenaire" src="../public/assets/img/logo_vi/iim.png" alt=""/>
                    </div>
                    <div class="col"><img class="img-partenaire" src="../public/assets/img/logo_vi/emlv.png" alt=""/>
                    </div>
                    <div class="col"><img class="img-partenaire" src="../public/assets/img/logo_vi/esilv.png" alt=""/>
                    </div>
                    <div class="col"><img class="img-partenaire" src="../public/assets/img/logo_vi/devinci-partners.png"
                                          alt=""/></div>
                    <div class="col"><img class="img-partenaire" src="../public/assets/img/logo_vi/leonard-de-vinci.png"
                                          alt=""/></div>
                    <div class="col"><img class="img-partenaire" src="../public/assets/img/logo_vi/tedx.png" alt=""/>
                    </div>
                    <div class="col"><img class="img-partenaire" src="img/logo_vi/pole-leonard-de-vinci.png" alt=""/>
                    </div>
                    <div class="col"><img class="img-partenaire" src="../public/assets/img/logo_vi/poletech.png"
                                          alt=""/></div>
                </div>
            </div>
        {% endblock %}
    </div>
    <div class="container">
        {% block content %}
        {% endblock %}
    </div>


    <div id="footer">
        {% block footer %}
            &copy; Copyright 2009 by <a href="#">you</a>.
        {% endblock %}
    </div>

{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}
{% endblock %}
</body>
</html>
